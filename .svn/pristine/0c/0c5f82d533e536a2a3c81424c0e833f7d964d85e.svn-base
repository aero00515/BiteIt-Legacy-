<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_store_info_feedback_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_store_info_clean"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/feedback_ratingbar_clean"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:isIndicator="false" />

    <TextView
        android:id="@+id/activity_store_info_feedback_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_store_info_service"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/feedback_ratingbar_service"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:isIndicator="false" />

    <TextView
        android:id="@+id/activity_store_info_feedback_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_store_info_price"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/feedback_ratingbar_price"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:isIndicator="false" />

    <TextView
        android:id="@+id/activity_store_info_feedback_favor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_store_info_favor"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/feedback_ratingbar_favor"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:isIndicator="false" />

    <TextView
        android:id="@+id/activity_store_info_feedback_unknow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_store_info_unknow"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/feedback_ratingbar_unknow"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false" />

</LinearLayout>