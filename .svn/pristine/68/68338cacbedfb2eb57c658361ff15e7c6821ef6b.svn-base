<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/activity_store_info_feedback_add_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:contentDescription="@string/activity_store_info_feedback_photo_description"
        android:src="@drawable/ic_action_photo" />

    <ListView
        android:id="@+id/activity_store_info_feedback_added_photo_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin" >
    </ListView>

</LinearLayout>