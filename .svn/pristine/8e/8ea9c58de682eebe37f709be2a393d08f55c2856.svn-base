<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/activity_expandablelistitem_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/activity_store_info_feedback_photo_description"
        android:src="@drawable/com_facebook_profile_default_icon" />

    <TextView
        android:id="@+id/activity_expandablelistitem_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/activity_expandablelistitem_is_blocked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@string/hello_world"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@drawable/bomb_new" />

    <ImageView
        android:id="@+id/activity_expandablelistitem_is_focused"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@string/hello_world"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@drawable/love" />

</LinearLayout>