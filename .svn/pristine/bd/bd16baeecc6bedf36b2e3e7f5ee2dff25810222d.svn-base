<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <EditText
        android:id="@+id/fragment_new_store_photo_comment_edit"
        android:hint="@string/activity_store_info_feedback_comment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/fragment_new_store_check_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/fragment_new_store_photo_imageview"
        android:contentDescription="@string/activity_store_info_feedback_photo_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>