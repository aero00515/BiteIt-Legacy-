<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- <TextView
        android:id="@+id/drawer_event_detail_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/title_activity"
        android:textAppearance="?android:attr/textAppearanceMedium" /> -->
    
    <TextView
        android:id="@+id/drawer_event_detail_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawer_event_detail_first_imageview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/drawer_event_detail_first_imageview"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_toEndOf="@+id/drawer_event_detail_first_imageview"
        android:layout_toRightOf="@+id/drawer_event_detail_first_imageview"
        android:drawableEnd="@drawable/abc_ic_voice_search_api_holo_light"
        android:drawableRight="@drawable/abc_ic_voice_search_api_holo_light"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/title_section1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawer_event_detail_second_imageview"
        android:layout_alignTop="@+id/drawer_event_detail_second_imageview"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_toEndOf="@+id/drawer_event_detail_second_imageview"
        android:layout_toRightOf="@+id/drawer_event_detail_second_imageview"
        android:drawableEnd="@drawable/abc_ic_voice_search_api_holo_light"
        android:drawableRight="@drawable/abc_ic_voice_search_api_holo_light"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/title_section2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawer_event_detail_third_imageview"
        android:layout_alignTop="@+id/drawer_event_detail_third_imageview"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_toEndOf="@+id/drawer_event_detail_third_imageview"
        android:layout_toRightOf="@+id/drawer_event_detail_third_imageview"
        android:drawableEnd="@drawable/abc_ic_voice_search_api_holo_light"
        android:drawableRight="@drawable/abc_ic_voice_search_api_holo_light"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/title_section3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_maybe_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_event_detail_third"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_toEndOf="@+id/drawer_event_detail_maybe_you_imageview"
        android:layout_toRightOf="@+id/drawer_event_detail_maybe_you_imageview"
        android:drawableEnd="@drawable/abc_ic_voice_search_api_holo_light"
        android:drawableRight="@drawable/abc_ic_voice_search_api_holo_light"
        android:drawableTop="@drawable/abc_ic_menu_moreoverflow_normal_holo_light"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:text="@string/title_section2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_first_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_second_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/drawer_event_detail_first"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_third_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/drawer_event_detail_second_imageview"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/drawer_event_detail_maybe_you_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawer_event_detail_maybe_you"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/activity_horizontal_padding"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/drawer_event_detail_crown"
        android:layout_width="@dimen/crown_square"
        android:layout_height="@dimen/crown_square"
        android:layout_alignLeft="@+id/drawer_event_detail_first_imageview"
        android:layout_alignStart="@+id/drawer_event_detail_first_imageview"
        android:layout_alignTop="@+id/drawer_event_detail_first_imageview"
        android:contentDescription="@string/activity_store_info_feedback_apply_description"
        android:maxHeight="@dimen/crown_square"
        android:maxWidth="@dimen/crown_square"
        android:src="@drawable/crown"
        android:visibility="gone" />

</RelativeLayout>